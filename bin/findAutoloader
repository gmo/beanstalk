#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
LIB_DIR="$DIR/.."

if [ -d "$LIB_DIR/vendor" ]; then
	# running from source
	VENDOR_DIR="$LIB_DIR"
else
	# running from composer install
	VENDOR_DIR="$LIB_DIR/../.."
fi
# resolve relative path
VENDOR_DIR=$(cd "$VENDOR_DIR"; pwd)

find "$VENDOR_DIR" -name autoload.php | head -1
